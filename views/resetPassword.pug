extends base

block content
  .auth-container
    h2 Reset Your Password
    form#resetPasswordForm(data-token=token)
      .form__group
        label.form__label(for="password") New Password
        input#password.form__input(
          type="password", 
          name="password", 
          required, 
          placeholder="Enter new password"
        )
      .form__group
        label.form__label(for="passwordConfirm") Confirm Password
        input#passwordConfirm.form__input(
          type="password", 
          name="passwordConfirm", 
          required, 
          placeholder="Confirm new password"
        )
      .form__group
        button.btn.btn--green(type="submit") Reset Password
