// HEADER
header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Tourista logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log Out
            a.nav__el(href='/me')
                //- Support both Cloudinary URLs and local images
                - const userPhoto = user.photo && user.photo.startsWith('http') ? user.photo : `/img/users/${user.photo || 'default.jpg'}`
                img.nav__user-img(src=userPhoto, alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Login
            a.nav__el(href='/signup') Sign up